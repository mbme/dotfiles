alias ydl-mp3='noglob youtube-dl -x --audio-format mp3 -o "%(title)s.%(ext)s"'
alias zip-package='7z a -mx=0'

alias outputs='swaymsg -t get_outputs'
alias windows='swaymsg -t get_tree'
