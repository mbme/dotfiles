unalias gb

alias glxgears='vblank_mode=0 glxgears'
alias remove_final_newline="perl -pi -e 'chomp if eof'"
alias xlogs='tail -f -n 1000 ~/.xorg.log'
alias xlog="tailf $HOME/.local/share/xorg/Xorg.0.log"

# SYSTEMD-related aliases
alias -r n='sudo netctl switch-to'
alias -r nstop='sudo netctl stop-all'
alias -r jnl='journalctl -e -f -b'
alias -r ctl='sudo systemctl'
alias -r ctlu='systemctl --user'

# PATH must be set in .zshrc because /etc/profile override PATH set in .zshenv

#export GEM_HOME="$(ruby -e "puts Gem.user_dir")"
#ruby_bin="$GEM_HOME/bin"

npm_bin="$HOME/.npm-global/bin"
yarn_bin="$HOME/.config/yarn/global/node_modules/.bin"

#rust_bin="$HOME/.cargo/bin"
#export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/src"

utils="$HOME/bin"

path=($path $utils $npm_bin $yarn_bin)

# OPAM CONFIGURATION
#. "$HOME/.opam/opam-init/init.zsh" > /dev/null 2> /dev/null || true

# for termite to be able to open new terminal in current dir
. /etc/profile.d/vte.sh
