#!/usr/bin/env bash

#int_mon="eDP-1-1"
int_mon="eDP1"
# ext_mon="DP1"
ext_mon="HDMI1"
#ext_mon="HDMI-1-1"

res_2k="2560x1440"
res_4k="3840x2160"

function connect(){
    # xrandr --output $ext_mon --mode $res_2k --left-of $int_mon --verbose
    xrandr --output $ext_mon --auto --left-of $int_mon --verbose
    xrandr --output $int_mon --off --verbose
    # xrandr --output $ext_mon --auto --left-of $int_mon --verbose
    # xrandr --dpi 96x96 --verbose
}

function disconnect(){
    xrandr --output $int_mon --auto --output $ext_mon --off --verbose
}

xrandr | grep "^$ext_mon connected" &> /dev/null && connect || disconnect
