#!/usr/bin/env bash

cases="lock screen
logout
suspend
hibernate
reboot
poweroff"

res=$(echo "$cases" | rofi -dmenu)

case "$res" in
    "lock screen")
        mb-lock-screen
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        mb-lock-screen && systemctl suspend
        ;;
    hibernate)
        mb-lock-screen && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    poweroff)
        systemctl poweroff
        ;;
esac

exit 0
