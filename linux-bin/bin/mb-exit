#!/usr/bin/env bash

cases="lock screen
logout
suspend
sleep
hibernate
reboot
restart
shutdown
halt
poweroff"

res=$(echo "$cases" | rofi -dmenu)

case "$res" in
    "lock screen")
        mb-lock-screen
        ;;
    "logout")
        i3-msg exit
        ;;
    "suspend" | "sleep")
        mb-lock-screen && systemctl suspend
        ;;
    "hibernate")
        mb-lock-screen && systemctl hibernate
        ;;
    "reboot" | "restart")
        systemctl reboot
        ;;
    "shutdown" | "poweroff" | "halt")
        systemctl poweroff
        ;;
esac

exit 0
