#!/usr/bin/env bash

case "$1" in
    up)
        pactl set-sink-volume @DEFAULT_SINK@ +5%
        ;;
    down)
        pactl set-sink-volume @DEFAULT_SINK@ -5%
        ;;
    toggle)
        pactl set-sink-mute @DEFAULT_SINK@ toggle
        ;;
    status)
        pactl list sinks | grep -A 9 "State: RUNNING" | grep "Volume:" | awk '{print $5}'
        ;;
    *)
        echo "Accepted arguments are: up, down, toggle and status."
        exit 1
        ;;
esac

exit 0
