general {
  colors = true
  color_separator = "#333333"
  interval = 3
}

order += "wireless wlp2s0"
order += "ethernet eno1"
order += "battery 0"
order += "volume Master"
order += "time"

wireless wlp2s0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet eno1 {
  format_up = "E: %ip"
  format_down = "E: down"
}

battery 0 {
  format = "%status %percentage %remaining"
  path = "/sys/class/power_supply/BAT%d/uevent"
  last_full_capacity = true
  low_threshold = 15
  threshold_type = time
}

volume Master {
  format = "â™ª: %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

time {
  format = "%d.%m %H:%M"
}
