# run xbindkeys -k to select keybinding

# Increase volume
"mb-audio speakers up"
    m:0x0 + c:123
    XF86AudioRaiseVolume
# win-shift-pageup
"mb-audio speakers up"
    m:0x50 +c:112
    Mod2+Mod4 + Prior

# Decrease volume
"mb-audio speakers down"
    m:0x0 + c:122
    XF86AudioLowerVolume
# win-shift-pagedown
"mb-audio speakers down"
    m:0x50 +c:117
    Mod2+Mod4 + Next

# Toggle mute
"mb-audio -n speakers toggle"
    m:0x0 + c:121
    XF86AudioMute

# Toggle mute microphone
"mb-audio -n mic toggle"
    m:0x1 + c:121
    Shift + XF86AudioMute

"mb-audio -n mic toggle"
    m:0x0 + c:198
    XF86AudioMicMute



# Toggle touchpad
"mb-touchpad -n toggle"
    m:0x0 + c:199
    XF86TouchpadToggle

# increase backlight
"mb-backlight inc"
    m:0x0 + c:233
    XF86MonBrightnessUp

"mb-backlight inc"
    m:0x40 + c:74
    Mod4 + F8

# decrease backlight
"mb-backlight dec"
    m:0x0 + c:232
    XF86MonBrightnessDown

"mb-backlight dec"
    m:0x40 + c:73
    Mod4 + F7


"mb-touchpad -n toggle"
    m:0x40 + c:75
    Mod4 + F9


#terminal
"mb-terminal"
    m:0x40 + c:36
    Mod4 + Return

#app runner
"rofi -show run"
    m:0x40 + c:67
    Mod4 + F1

# switch window
"rofi -show window"
    m:0x40 + c:32
    Mod4 + o

#app killer
"xkill"
    m:0x48 + c:45
    Alt+Mod4 + k

#screenshots
"gnome-screenshot -i"
    m:0x0 + c:107
    Print

#AUDIOPLAYER CONTROLS
"mb-player play-pause"
    m:0x0 + c:172
    XF86AudioPlay

"mb-player prev"
    m:0x0 + c:173
    XF86AudioPrev

"mb-player next"
    m:0x0 + c:171
    XF86AudioNext

"mb-player play-pause"
    m:0x40 + c:63
    Mod4 + KP_Multiply

"mb-player prev"
    m:0x40 + c:106
    Mod4 + KP_Divide

"mb-player next"
    m:0x40 + c:82
    Mod4 + KP_Subtract

